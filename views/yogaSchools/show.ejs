<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">GtY</p>
            <div class="list_group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= school.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">3.500 â‚¬</h4>
                    <h4><a><%=school.name%></a></h4>
                    <p><%=school.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/yoga_schools/<%=school._id%>/comments/new">Add New Comment </a>
                </div>
                <hr>
                <%school.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong> <%=comment.author%> </strong>
                            <span class="pull-right"><%= comment.created.toDateString() %></span>
                            <p>
                                <%=comment.text%> 
                            </p> 
                        </div>
                    </div>
                <% }) %>  

            </div>
        	
        </div>
    </div>
</div>

    
<% include ../partials/footer %>
